datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")  // Reads connection string from your .env file
}


generator client {
  provider = "prisma-client-js"
}


model User {
  id        Int      @id @default(autoincrement()) // primary key with auto-increment
  name      String
  email     String   @unique
  }